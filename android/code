sudo apt update
sudo apt install python
sudo apt install bc openjdk-8-jdk gnupg flex bison gperf build-essential zip curl zlib1g-dev x11proto-core-dev 
sudo apt install libx11-dev ccache libgl1-mesa-dev libxml2-utils xsltproc unzip libssl-dev
sudo apt install libc6-dev-i386 lib32ncurses5-dev lib32z-dev 
sudo apt install gcc-multilib g++-multilib 

sudo update-alternatives --config java
sudo update-alternatives --config javac
wget -S -O - https://github.com/snowdream/51-android/blob/master/51-android.rules | sed "s/<username>/$USER/" | sudo tee >/dev/null /etc/udev/rules.d/51-android.rules
sudo udevadm control --reload-rules


安装repo
确保主目录下有一个 bin/ 目录，并且该目录包含在路径中：
mkdir -p ~/bin
在bashrc中添加如下内容
PATH=~/bin:$PATH
下载 Repo 工具，并确保它可执行：
curl https://storage.googleapis.com/git-repo-downloads/repo > ~/bin/repo
chmod a+x ~/bin/repo



repo init -u ssh://cuiyue@gerrit.it.chehejia.com:29418/platform/manifest -b O-M01-MASTER --repo-url ssh://cuiyue@gerrit.it.chehejia.com:29418/git-repo
repo sync -c -q --no-tags -j12



cd LINUX/android/
source build/envsetup.sh 
lunch 9   # 9. M01_AE-userdebug
make
